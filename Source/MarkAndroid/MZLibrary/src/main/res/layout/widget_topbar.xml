<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_topbar"
    android:background="@color/color_bg_topbar">

    <ImageView
        android:id="@+id/topbar_icon"
        android:layout_width="@dimen/height_topbar"
        android:layout_height="@dimen/height_topbar"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@drawable/selector_black_alpha"
        android:clickable="true"
        android:padding="@dimen/margin_small_more"
        android:scaleType="fitXY"
        android:src="@drawable/icon_menu"
        android:visibility="gone" />

    <TextView
        android:id="@+id/topbar_title"
        style="@style/font_topbar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/topbar_icon"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="@string/ok" />

    <ImageView
        android:id="@+id/topbar_menu"
        android:layout_width="@dimen/height_topbar"
        android:layout_height="@dimen/height_topbar"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/selector_black_alpha"
        android:clickable="true"
        android:padding="@dimen/margin_small_more"
        android:scaleType="fitXY"
        android:src="@drawable/icon_menu"
        android:visibility="gone" />
</RelativeLayout>