<resources>

    <!-- Drawer 标题文字 -->
    <style name="drawer_title_font">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/color_font_text</item>
    </style>

    <!-- Drawer 特殊文字 -->
    <style name="drawer_spec_font">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/color_font_spec</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Drawer 按钮 -->
    <style name="drawer_button">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/color_default_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">@dimen/margin_large</item>
        <item name="android:paddingRight">@dimen/margin_large</item>
        <item name="android:paddingTop">@dimen/margin_small</item>
        <item name="android:paddingBottom">@dimen/margin_small</item>
        <item name="android:background">@drawable/selector_default_button</item>
    </style>
</resources>
