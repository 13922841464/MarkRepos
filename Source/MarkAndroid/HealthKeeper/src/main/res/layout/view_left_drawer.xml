<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/drawer_width"
    android:layout_height="match_parent"
    android:background="@color/color_bg_drawer">

    <ListView
        android:id="@+id/drawer_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/drawer_button_layout1"
        android:scrollbars="none"
        android:dividerHeight="@dimen/divider_height"
        android:divider="@color/color_bg_drawer_divider" />

    <LinearLayout
        android:id="@+id/drawer_button_layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/drawer_button_layout2"
        android:layout_marginBottom="@dimen/divider_height"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/button_feedback"
            style="@style/Default_Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:drawableLeft="@drawable/icon_feedback_small"
            android:clickable="true"
            android:text="@string/feedback" />

        <TextView
            android:id="@+id/button_about"
            style="@style/Default_Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/divider_height"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:drawableLeft="@drawable/icon_about_small"
            android:clickable="true"
            android:text="@string/about" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/drawer_button_layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/button_setting"
            style="@style/Default_Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:drawableLeft="@drawable/icon_setting_small"
            android:clickable="true"
            android:text="@string/setting" />

        <TextView
            android:id="@+id/button_share"
            style="@style/Default_Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/divider_height"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:drawableLeft="@drawable/icon_share_small"
            android:clickable="true"
            android:text="@string/share" />
    </LinearLayout>

</RelativeLayout>