<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg_base"
    android:orientation="vertical">

    <com.markzhai.library.widget.MZTopbar
        android:id="@id/topbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_topbar" />

    <RelativeLayout
        android:id="@+id/filter_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_small"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/filter_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/font_body"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:text="@string/filter" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/start_filter_button"
            android:layout_toRightOf="@+id/filter_text"
            android:orientation="vertical">

            <Button
                android:id="@+id/department_filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Default_Button"
                android:text="@string/department_filter" />

            <Button
                android:id="@+id/place_filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                style="@style/Default_Button"
                android:text="@string/place_filter" />
        </LinearLayout>

        <Button
            android:id="@+id/start_filter_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Default_Button"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:text="@string/start_filter" />
    </RelativeLayout>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/color_bg_button_disable" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.wefika.flowlayout.FlowLayout
                android:id="@+id/department_flow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_small_more"
                android:gravity="start|top" />

            <View
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_bg_button_disable" />

            <com.wefika.flowlayout.FlowLayout
                android:id="@+id/place_flow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_small_more"
                android:gravity="start|top" />
        </LinearLayout>

    </ScrollView>

</LinearLayout>