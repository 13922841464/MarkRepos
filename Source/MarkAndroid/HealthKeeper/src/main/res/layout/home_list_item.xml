<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/home_item_height"
    android:clickable="true"
    android:background="@drawable/selector_drawer_item">

    <ImageView
        android:id="@+id/home_item_icon"
        android:layout_width="@dimen/home_item_icon_size"
        android:layout_height="@dimen/home_item_icon_size"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_launcher_web"
        android:scaleType="fitXY"
        android:padding="@dimen/margin_small_more" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/home_item_icon"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/home_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/font_body"
            android:text="@string/health_foods" />

        <TextView
            android:id="@+id/home_item_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/font_body_hint"
            android:text="@string/disease_information_hint" />
    </LinearLayout>
</RelativeLayout>