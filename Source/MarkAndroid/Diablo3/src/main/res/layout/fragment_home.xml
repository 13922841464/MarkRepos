<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:slider="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.markzhai.library.widget.MZTopbar
        android:id="@id/topbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_topbar" />

    <com.markzhai.library.widget.slider.SliderLayout
        android:id="@+id/home_slider"
        android:layout_width="match_parent"
        android:layout_height="165dp"
        android:layout_below="@+id/topbar"
        slider:auto_cycle="true"
        slider:indicator_visibility="visible"
        slider:pager_animation="Accordion"
        slider:pager_animation_span="1100" />

    <com.markzhai.library.widget.slider.Indicators.PagerIndicator
        android:id="@+id/slider_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        slider:selected_color="#0095BF"
        slider:selected_height="6dp"
        slider:selected_padding_left="5dp"
        slider:selected_padding_right="5dp"
        slider:selected_width="6dp"
        slider:shape="oval"
        slider:unselected_color="#55333333"
        slider:unselected_height="6dp"
        slider:unselected_padding_left="5dp"
        slider:unselected_padding_right="5dp"
        slider:unselected_width="6dp" />

</RelativeLayout>