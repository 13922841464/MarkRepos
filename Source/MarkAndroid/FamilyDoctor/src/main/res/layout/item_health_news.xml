<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/margin_small_more"
    android:layout_margin="@dimen/margin_small_more"
    android:clickable="true"
    android:background="@drawable/selector_drawer_item">

    <ImageView
        android:id="@+id/news_img"
        android:layout_width="135dp"
        android:layout_height="90dp"
        android:src="@drawable/loading"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/news_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_small_more"
        android:layout_alignTop="@+id/news_img"
        android:layout_toRightOf="@+id/news_img"
        android:lines="2"
        android:ellipsize="end"
        style="@style/font_title"
        android:text="家庭医生家庭医生家庭医生家庭医生家庭医生家庭医生家庭医生" />

    <TextView
        android:id="@+id/news_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_small_more"
        android:singleLine="true"
        android:ellipsize="end"
        style="@style/font_news_item_date"
        android:layout_alignBottom="@+id/news_img"
        android:layout_toRightOf="@+id/news_img"
        android:text="2015-4-5 18:54" />
</RelativeLayout>